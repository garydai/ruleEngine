<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.sally.account.dao.AccountDao">


    <select id="findAccountByName" resultType="xyz.sally.account.domain.dmo.Account">
       SELECT *
       FROM account
       WHERE username = #{username}
    </select>

    <select id="findAccountByNamePwd" resultType="xyz.sally.account.domain.dmo.Account">
       SELECT *
       FROM account
       WHERE username = #{username} and password = #{password}
    </select>
</mapper>
